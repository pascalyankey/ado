<Window x:Class="AdoWPF.KlantToevoegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KlantToevoegen" Height="250" Width="350">
    <Grid>
        <Label Content="Naam:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50"/>
        <TextBox Name="textBoxNaam" HorizontalAlignment="Right" VerticalAlignment="Top" Width="150" Height="25" Margin="50" />
        <Button Name="buttonToevoegen" Content="Toevoegen" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="50 100 50 0" Width="150" Height="25" Click="ButtonToevoegen_Click" />
        <Label Name="labelStatus" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="250" Height="30" Margin="50 0 0 20" />
    </Grid>
</Window>
